@using Gymlog.Dominio.ValueObjects;
@model Pessoa



<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Olá, @Model.Nome</a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
    <ul class="navbar-nav flex-grow-1">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Início</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-controller="Horario" asp-action="Index">Horários</a>
        </li>

        @if(Model.PerfilID == 1)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Autenticacao" asp-action="Index">Lista Pessoas</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Exercicio" asp-action="Index">Exercícios</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Exercicio" asp-action="Inserir">Adicionar Exercícios</a>
            </li>
        }

        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
            <ul class="navbar-nav ms-auto d-flex gap-2">
                <li class="nav-item">
                    <a class="btn btn-outline-danger" asp-area="" asp-controller="Login" asp-action="SairUsuario">Sair</a>
                </li>
            </ul>
        </div>
    </ul>
</div>