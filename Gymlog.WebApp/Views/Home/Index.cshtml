    ViewData["Title"] = "Home";
}
<style>
    body{
        margin: 0;
        background: #212529;
    }
    .main-signin{
        width:100vw;
        height:100vh;
        background: #212529;
        display:flex;
        justify-content: center;
        align-items:center;
    }
    .left-signin{
        width: 50vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction:column;
    }

    .left-signin > h1 {
        color: #ffffff;
        font-weight: 800;
        margin: 0;
    }

    .left-signin> h3 {
        color: #FFFFFF;
        font-weight: 100;
        margin: 10px;
    }

    .left-signin-image {
        width: 35vw;
    }


    .right-signin {
        width: 50vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }
    .card-signin{
        width:60%;
        display:flex;
        justify-content:center;
        align-items:center;
        flex-direction:column;
        padding:30px 35px;
        background: #3B3838;
        border-radius:20px;
        box-shadow: 0px 10px 40px #242424;
    }
    .card-signin > h1{
        color: #FFFFFF;
        font-weight:800;
        margin:0;
    }    
    .text-field{
        width: 100%;
        display:flex;
        flex-direction:column;
        align-items:flex-start;
        justify-content:center;
        margin: 0px 0px;
    }

    .text-field > input {
            width: 100%;
            border: none;
            border-radius: 10px;
            padding: 15px;
            background: #FFFFFF;
            color: #00000056;
            font-size: 12pt;
            box-shadow: 0px 10px 40px #00000056;
            outline: none;
            box-sizing: border-box;
    }

    .text-field > label {
        color:#f0ffffde;
        margin-bottom: 10px;
    }

    .textfield > input::placeholder {
        color: #f0ffff94;
    }

    .btn-signin {
        width: 100%;
        padding: 16px 0px;
        margin: 25px;
        border: none;
        border-radius: 8px;
        outline:none;
        font-weight:800;
        letter-spacing:3px;
        color:#ffffff;
        background: #1e90ff;
        cursor:pointer;
        box-shadow: 0px 10px 40px -12px #092b4d;
    }

</style>
