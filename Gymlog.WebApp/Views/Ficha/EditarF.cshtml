@using Gymlog.WebApp.Models;
@model FichaViewModel

<style>
    body {
        margin: 0;
        background: #212529;
    }

    .alert-index {
        margin-left: 185px;
        margin-right: 185px;
    }

    .main-edit {
        width: 100vw;
        height: 100vh;
        background: #212529;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card-edit {
        width: 60%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 30px 35px;
        background: #3B3838;
        border-radius: 20px;
        box-shadow: 0px 10px 40px #242424;
    }

        .card-edit > h1 {
            color: #FFFFFF;
            font-weight: 800;
            margin: 0;
        }

    .text-field {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        margin: 0px 0px;
    }

        .text-field > input {
            width: 100%;
            border: none;
            border-radius: 10px;
            padding: 15px;
            background: #FFFFFF;
            color: #00000056;
            font-size: 12pt;
            box-shadow: 0px 10px 40px #00000056;
            outline: none;
            box-sizing: border-box;
        }

        .text-field > label {
            color: #f0ffffde;
            margin-bottom: 10px;
        }

    .textfield > input::placeholder {
        color: #f0ffff94;
    }

    .btn-edit {
        width: 100%;
        padding: 16px 0px;
        margin-top: 15px;
        border: none;
        border-radius: 8px;
        outline: none;
        font-weight: 800;
        letter-spacing: 1px;
        color: #ffffff;
        cursor: pointer;
        box-shadow: 0px 10px 40px -12px #092b4d;
    }

    .error {
        color: red;
    }

</style>


<form asp-action="EditarFicha" asp-controller="Ficha" method="post">
    <input type="hidden" asp-for=FichaID />

    <div class="alert-index">
        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success" role="alert">
                <button type="button" class="btn btn-danger rounded-pill btn-sm close-alert" aria-label="Close">x</button>
                @TempData["MensagemSucesso"]
            </div>
        }
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <button type="button" class="btn btn-danger rounded-pill btn-sm close-alert" aria-label="Close">x</button>
                @TempData["MensagemErro"]
            </div>
        }
    </div>
    <div class="main-edit">
        <div class="card-edit">
            <h1>Edite as informações da ficha</h1>
        <div class="text-field">
            <label class="control-label">Nome Ficha</label>
            <input asp-for="NomeFicha" class="form-control" placeholder="Digite o nome da ficha">
            @Html.ValidationMessageFor(x => x.NomeFicha, "", new { @Class="text-danger"})
        </div>
        <div class="text-field">
            <label class="control-label">Observacoes</label>
            <input asp-for="Observacoes" class="form-control" placeholder="Digite as observações">
            @Html.ValidationMessageFor(x => x.Observacoes, "", new { @Class="text-danger"})
        </div>
        <div class="text-field">
            <label class="control-label">Quantidade de semanas da ficha</label>
            <input asp-for="QuantidadeSemanas" class="form-control" placeholder="Digite a quantidade" />
            @Html.ValidationMessageFor(x => x.QuantidadeSemanas, "Digite a quantidade de semanas", new { @Class="text-danger"})
        </div>
        <div class="text-field">
            <label class="control-label" for="PessoaID">Pessoa destinada</label>
            @Html.DropDownListFor(x => x.PessoaID, new SelectList(ViewBag.Pessoa, "PessoaID", "Nome", Model.PessoaID), "-- Selecione --",new { @class = "form-select"})
            @Html.ValidationMessageFor(x => x.PessoaID, "Escolha a pessoa", new { @Class="text-danger"})
        </div>
            <button class="btn-edit btn btn-primary">Editar</button>
        <button class="btn-edit btn btn-secondary" asp-controller="Ficha" asp-action="Index">Voltar</button>

        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
    <script defer="" src="https://static.cloudflareinsights.com/beacon.min.js/v8b253dfea2ab4077af8c6f58422dfbfd1689876627854" integrity="sha512-bjgnUKX4azu3dLTVtie9u6TKqgx29RBwfj3QXYt5EKfWM/9hPSAI/4qcV5NACjwAo8UtTeWefx6Zq5PHcMm7Tg==" data-cf-beacon="{&quot;rayId&quot;:&quot;80547d2a3def521b&quot;,&quot;token&quot;:&quot;cd0b4b3a733644fc843ef0b185f98241&quot;,&quot;version&quot;:&quot;2023.8.0&quot;,&quot;si&quot;:100}" crossorigin="anonymous" style="display: none !important;"></script>


    <script>
        var val = document.getElementById('zoption_')
        val.options[val.selectedIndex].value
    </script>
    <script>
        $('#cpf').mask('000.000.000-00', { reverse: true });
    </script>
</form>

