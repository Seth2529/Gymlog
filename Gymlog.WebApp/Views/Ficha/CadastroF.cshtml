@using Gymlog.WebApp.Models;
@model FichaViewModel

<style>
    body {
        margin: 0;
        background: #212529;
    }

    .alert-index {
        margin-left: 185px;
        margin-right: 185px;
    }

    .main-signin {
        width: 100vw;
        height: 90vh;
        background: #212529;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .left-signin {
        width: 50vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

        .left-signin > h1 {
            color: #ffffff;
            font-weight: 800;
            margin: 0;
        }

        .left-signin > h3 {
            color: #FFFFFF;
            font-weight: 100;
            margin: 10px;
        }

    .left-signin-image {
        width: 35vw;
    }


    .right-signin {
        width: 50vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card-signin {
        width: 60%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 30px 35px;
        background: #3B3838;
        border-radius: 20px;
        box-shadow: 0px 10px 40px #242424;
    }

        .card-signin > h1 {
            color: #FFFFFF;
            font-weight: 800;
            margin: 0;
        }

    .text-field {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        margin: 0px 0px;
    }

        .text-field > input {
            width: 100%;
            border: none;
            border-radius: 10px;
            padding: 15px;
            background: #FFFFFF;
            color: #00000056;
            font-size: 12pt;
            box-shadow: 0px 10px 40px #00000056;
            outline: none;
            box-sizing: border-box;
        }

        .text-field > label {
            color: #f0ffffde;
            margin-bottom: 10px;
        }

    .textfield > input::placeholder {
        color: #f0ffff94;
    }

    .btn-signin {
        width: 100%;
        padding: 16px 0px;
        margin: 25px;
        border: none;
        border-radius: 8px;
        outline: none;
        font-weight: 800;
        letter-spacing: 1px;
        color: #ffffff;
        background: #1e90ff;
        cursor: pointer;
        box-shadow: 0px 10px 40px -12px #092b4d;
    }

    .error {
        color: red;
    }
</style>
<form asp-action="CadastrarFicha" asp-controller="Ficha" method="POST">
    <div class="alert-index">
        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success" role="alert">
                <button type="button" class="btn btn-danger rounded-pill btn-sm close-alert" aria-label="Close">x</button>
                @TempData["MensagemSucesso"]
            </div>
        }
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <button type="button" class="btn btn-danger rounded-pill btn-sm close-alert" aria-label="Close">x</button>
                @TempData["MensagemErro"]
            </div>
        }
    </div>
    <div class="main-signin">
        <div class="left-signin">
            <h1>Cadastre a ficha</h1>
            <h3>Descreva as informações da ficha pessoal</h3>
            <img src="https://t3.ftcdn.net/jpg/03/96/56/54/240_F_396565468_olNuwKrppY2ovXhDsBNaJfClaArRTIM8.jpg" alt="gym" class="left-signin-image">
        </div>
        <div class="right-signin">
            <div class="card-signin">
                <h1>Ficha de exercicio</h1>
                <div class="text-field">
                    <label class="control-label">Nome Ficha</label>
                    <input asp-for="NomeFicha" class="form-control" placeholder="Digite o nome da ficha">
                    @Html.ValidationMessageFor(x => x.NomeFicha, "", new { @Class="text-danger"})
                </div>
                <div class="text-field">
                    <label class="control-label">Observacoes</label>
                    <input asp-for="Observacoes" class="form-control" placeholder="Digite as observações">
                    @Html.ValidationMessageFor(x => x.Observacoes, "", new { @Class="text-danger"})
                </div>
                <div class="text-field">
                    <label class="control-label">Quantidade de semanas da ficha</label>
                    <input asp-for="QuantidadeSemanas" class="form-control" value="" placeholder="Digite a quantidade" />
                    @Html.ValidationMessageFor(x => x.QuantidadeSemanas, "Digite a quantidade de semanas", new { @Class="text-danger"})
                </div>
                <div class="text-field">
                    <label class="control-label" for="PessoaID">Pessoa destinada</label>
                    @Html.DropDownListFor(x => x.PessoaID, new SelectList(ViewBag.Pessoa, "PessoaID", "Nome", Model.PessoaID), "-- Selecione --",new { @class = "form-select"})
                    @Html.ValidationMessageFor(x => x.PessoaID, "Escolha a pessoa", new { @Class="text-danger"})
                </div>
                <button class="btn-signin btn btn-outline-primary">Cadastrar</button>
            </div>
        </div>
    </div>
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
    <script defer="" src="https://static.cloudflareinsights.com/beacon.min.js/v8b253dfea2ab4077af8c6f58422dfbfd1689876627854" integrity="sha512-bjgnUKX4azu3dLTVtie9u6TKqgx29RBwfj3QXYt5EKfWM/9hPSAI/4qcV5NACjwAo8UtTeWefx6Zq5PHcMm7Tg==" data-cf-beacon="{&quot;rayId&quot;:&quot;80547d2a3def521b&quot;,&quot;token&quot;:&quot;cd0b4b3a733644fc843ef0b185f98241&quot;,&quot;version&quot;:&quot;2023.8.0&quot;,&quot;si&quot;:100}" crossorigin="anonymous" style="display: none !important;"></script>

    <script>
        var e = document.getElementById("ddlViewBy");
        var value = e.value;
        var text = e.options[e.selectedIndex].text;
    </script>
</form>
