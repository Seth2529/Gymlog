@using Gymlog.Dominio.Entidade;
@using Gymlog.WebApp.Helper;

@model IEnumerable<Horario>

<style>
    body {
        margin: 0;
        background: #3B3838;
    }

    .alert-index {
        margin-left: 185px;
        margin-right: 185px;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 30px 35px;
    }

    .main-index {
        width: 100vw;
        height: 75vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card-index {
        margin-left: 185px;
        margin-right: 185px;
        width: 40%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 30px 35px;
        background: #FFFFFF;
        border-radius: 20px;
        box-shadow: 0px 10px 40px #FFFFFF;
    }

        .card-index > h1 {
            color: #3B3838;
            font-weight: 800;
            margin: 0;
        }

</style>

<div class="alert-index">
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger rounded-pill btn-sm close-alert" aria-label="Close">x</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger rounded-pill btn-sm close-alert" aria-label="Close">x</button>
            @TempData["MensagemErro"]
        </div>
    }
</div>

<div class="main-index">
    <div class="card-index">
        <h1 class="display-4">Horários da academia</h1>
        <table class="table table-striped" id="tabela-geral">
            <thead class="table-dark">
                <tr>
                    <th>Horario de funcionamento</th>
                    <th>Dia da semana</th>
                    <th>Data do feriado</th>
                </tr>
            </thead>
            <tbody class="table table-striped">
                @foreach (var item in Model)
                {
                    <input type="hidden" @item.HorarioID />
                    <tr>
                        <td>
                            @item.HorarioPadrao
                        </td>
                        <td>
                            @item.DiaDaSemana
                        </td>
                        <td>
                            @FeriadoHelper.ObterMensagemOculta(item.DataFeriado)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>