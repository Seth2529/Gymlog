@using Gymlog.Dominio.ValueObjects;
@using Gymlog.WebApp.Helper;

@model IEnumerable<Exercicio>

<style>
    body {
        margin: 0;
        background: #3B3838;
    }

    .alert-index {
        margin-left: 185px;
        margin-right: 185px;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 30px 35px;
    }

    .main-index {
        width: 100vw;
        height: 75vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card-index {
        margin-left: 185px;
        margin-right: 185px;
        width: 40%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 30px 35px;
        background: #FFFFFF;
        border-radius: 20px;
        box-shadow: 0px 10px 40px #FFFFFF;
    }

        .card-index > h1 {
            color: #3B3838;
            font-weight: 800;
            margin: 0;
        }

</style>

<div class="alert-index">
    @if (TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success" role="alert">
            <button type="button" class="btn btn-danger rounded-pill btn-sm close-alert" aria-label="Close">x</button>
            @TempData["MensagemSucesso"]
        </div>
    }
    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger" role="alert">
            <button type="button" class="btn btn-danger rounded-pill btn-sm close-alert" aria-label="Close">x</button>
            @TempData["MensagemErro"]
        </div>
    }
</div>

<div class="main-index">
    <div class="card-index">
        <h1 class="display-4">Listagem de exercícios</h1>
        </br>
        <table class="table table-striped" id="tabela-geral">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Exercicio</th>
                    <th>Series</th>
                    <th>Repetições</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.ExercicioID
                        </td>
                        <td>
                            @item.NomeExercicio
                        </td>
                        <td>
                            @item.SerieExercicio
                        </td>
                        <td>
                            @TipoRepeticaoHelper.GetTipoRepeticaoDescricao(item.TipoRepeticaoID)
                        </td>
                        <td>
                            <a type="button" class="btn btn-outline-primary role="button" asp-action="Editar" asp-controller="Exercicio" asp-route-exercicioID="@item.ExercicioID">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pen" viewBox="0 0 16 16">
                                    <path d="m13.498.795.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0 1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5 0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1 1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1 1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44 3.854a.5.5 0 0 0 0-.708l-1.585-1.585z" />
                                </svg>
                                Editar
                            </a>
                            <a type="button" class="btn btn-outline-danger" role="button" asp-action="Apagar" asp-controller="Exercicio" asp-route-exercicioID="@item.ExercicioID">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0z"></path>
                                </svg>
                                Apagar
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>