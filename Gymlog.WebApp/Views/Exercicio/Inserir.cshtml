@using Gymlog.WebApp.Models;
@model ExercicioViewModel

<style>
    body {
        margin: 0;
        background: #212529;
    }

    .alert-index {
        margin-left: 185px;
        margin-right: 185px;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 30px 35px;
    }

    .main-signin {
        width: 100vw;
        height: 100vh;
        background: #212529;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .left-signin {
        width: 50vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
    }

        .left-signin > h1 {
            color: #ffffff;
            font-weight: 800;
            margin: 0;
        }

        .left-signin > h3 {
            color: #FFFFFF;
            font-weight: 100;
            margin: 10px;
        }

    .left-signin-image {
        width: 35vw;
    }


    .right-signin {
        width: 50vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card-signin {
        width: 60%;
        display: flex;
        justify-content: center;
        align-items: center;
        flex-direction: column;
        padding: 30px 35px;
        background: #3B3838;
        border-radius: 20px;
        box-shadow: 0px 10px 40px #242424;
    }

        .card-signin > h1 {
            color: #FFFFFF;
            font-weight: 800;
            margin: 0;
        }

    .text-field {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        justify-content: center;
        margin: 0px 0px;
    }

        .text-field > input {
            width: 100%;
            border: none;
            border-radius: 10px;
            padding: 15px;
            background: #FFFFFF;
            color: #00000056;
            font-size: 12pt;
            box-shadow: 0px 10px 40px #00000056;
            outline: none;
            box-sizing: border-box;
        }

        .text-field > label {
            color: #f0ffffde;
            margin-bottom: 10px;
        }

    .textfield > input::placeholder {
        color: #f0ffff94;
    }

    .btn-inserir {
        width: 100%;
        padding: 16px 0px;
        margin: 25px;
        border: none;
        border-radius: 8px;
        outline: none;
        font-weight: 800;
        letter-spacing: 1px;
        color: #ffffff;
        background: #30a444;
        cursor: pointer;
        box-shadow: 0px 10px 40px -12px #2c7a3a;
    }

</style>
<form asp-action="CadastrarExercicio" asp-controller="Exercicio" method="POST">
    <div class="alert-index">
        @if (TempData["MensagemSucesso"] != null)
        {
            <div class="alert alert-success" role="alert">
                <button type="button" class="btn btn-danger rounded-pill btn-sm close-alert" aria-label="Close">x</button>
                @TempData["MensagemSucesso"]
            </div>
        }
        @if (TempData["MensagemErro"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <button type="button" class="btn btn-danger rounded-pill btn-sm close-alert" aria-label="Close">x</button>
                @TempData["MensagemErro"]
            </div>
        }
    </div>
    <div class="main-signin h-100">
        <div class="left-signin">
            <h1>Inserir Exercício</h1>
            <h3>Descreva as informações do exercício</h3>
            <img src="https://sabawellness.com.br/wp-content/uploads/2022/03/AdobeStock_SABA-WELLNESS-ACADEMIA-4-scaled.jpeg" alt="gym" class="left-signin-image">
        </div>
        <div class="right-signin">
            <div class="card-signin">
                <h1>Exercício</h1>
                <div class="text-field">
                    <label class="control-label">Nome Exercício</label>
                    <input asp-for="NomeExercicio" class="form-control" placeholder="Digite o nome do exercicio">
                    @Html.ValidationMessageFor(x => x.NomeExercicio, "", new { @Class="text-danger"})
                </div>
                <div class="text-field">
                    <label class="control-label">Serie Exercicio</label>
                    <input asp-for="SerieExercicio" class="form-control" value=" placeholder="Digite a serie do exercicio" />
                    @Html.ValidationMessageFor(x => x.SerieExercicio, "Digite a quantidade de séries", new { @Class="text-danger"})
                </div>
                <div class="text-field">
                    <label class="control-label" for="Perfil">Tipo de repetição</label>
                    @Html.DropDownListFor(x => x.TipoRepeticaoID, new SelectList(ViewBag.RepeticaoExercicio, "TipoRepeticaoID", "TipoRepeticao", Model.TipoRepeticaoID), "-- Selecione --",new { @class = "form-select"})
                    @Html.ValidationMessageFor(x => x.TipoRepeticaoID, "Escolha o tipo de repetição", new { @Class="text-danger"})
                </div>
                <button class="btn-inserir btn btn-outline-success"> Inserir </button>
            </div>
        </div>
    </div>
    <script src="js/jquery-3.3.1.min.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
    <script defer="" src="https://static.cloudflareinsights.com/beacon.min.js/v8b253dfea2ab4077af8c6f58422dfbfd1689876627854" integrity="sha512-bjgnUKX4azu3dLTVtie9u6TKqgx29RBwfj3QXYt5EKfWM/9hPSAI/4qcV5NACjwAo8UtTeWefx6Zq5PHcMm7Tg==" data-cf-beacon="{&quot;rayId&quot;:&quot;80547d2a3def521b&quot;,&quot;token&quot;:&quot;cd0b4b3a733644fc843ef0b185f98241&quot;,&quot;version&quot;:&quot;2023.8.0&quot;,&quot;si&quot;:100}" crossorigin="anonymous" style="display: none !important;"></script>

    <script>
        var e = document.getElementById("ddlViewBy");
        var value = e.value;
        var text = e.options[e.selectedIndex].text;
    </script>
</form>
